<project name="LX" default="jar">
  
  <property file="build.properties" />
	
  <path id="lib.path">
    <fileset dir="../lib">
      <include name="*.jar"/>
    </fileset>
  </path>
	
  <target name="javadoc" depends="clean">
  	<mkdir dir="../doc"/>
  	<javadoc
  		bottom="LX library by Mark C. Slee. (C) 2012-" 
  		classpath="../lib/gson-2.8.6.jar;../lib/coremidi4j-1.4.jar;"
  		destdir="../doc"
  		verbose="false" 
  		stylesheetfile="stylesheet.css" 
  		doctitle="LX API Specification" 
  		version="false" 
  		windowtitle="LX API">
  	 			
		<link href="${javadoc.java.href}" />
  		<link href="${javadoc.gson.href}" offline="true" packagelistLoc="." />

			<fileset dir="../src/main/java" defaultexcludes="yes">
  			<include name="**/*"/>
  		</fileset>
  	</javadoc>
  </target>
	
  <target name="jar" depends="clean">
    <mkdir dir="../tmp"/>
	<javac srcdir="../src" destdir="../tmp" includeAntRuntime="false" source="1.8" target="1.8">
		<classpath refid="lib.path" />
		<compilerarg value="-Xlint" />
	</javac>
  	<copy file="../VERSION" todir="../tmp" />
  	<copy file="../LICENSE" todir="../tmp" />
    <mkdir dir="../bin"/>
  	<jar destfile="../bin/LX.jar" basedir="../tmp" includes="LICENSE VERSION **/*.class">
  		<zipgroupfileset dir="../lib" includes="coremidi4j-1.4.jar" />
  		<zipgroupfileset dir="../lib" includes="gson-2.8.6.jar" />
    </jar>
  	<delete dir="../tmp"/>
  </target>

  <target name="clean">
  	<delete dir="../tmp"/>
    <delete dir="../bin"/>
  </target>
</project>
